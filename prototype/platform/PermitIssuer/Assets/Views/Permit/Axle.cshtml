@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<UPP.Protocols.AxleInfo>
@using Upp.Common.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Axle Information</legend>
    @* @Html.GroupItem(Model.Description, "Description", "Description") *@
    @Html.GroupItem(Model.WeightPerAxle, new GroupItemProperties("WeightPerAxle") { label = "Weight Per Axle", inputType = GroupItemProperties.InputType.NUMBER, range = new GroupItemProperties.Range() { min = 0 }, suffix = GroupItemProperties.Suffixes.POUNDS })
    @* @Html.GroupItem(Model.DescriptionSummary, "DescriptionSummary", "Description Summary") *@
    @Html.GroupItem(Model.AxleCount, new GroupItemProperties("AxleCount") { label = "Axle Count", inputType = GroupItemProperties.InputType.NUMBER, range = new GroupItemProperties.Range() { min = 0 } })
    @* @Html.GroupItem(Model.GroupCount, "GroupCount", "Group Count") *@
    @* @Html.GroupItem(Model.ApproxAxleLength, "ApproxAxleLength", "Approximate Axle Length (Total)") *@
