@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.CompanyInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Company Information</legend>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-8">
            <select class="form-control" id="company-selector">
                <option></option>
            </select>
        </div>
    </div>
    @Html.GroupItem(Model.Name, "Name", "Name")
    @Html.GroupItem(Model.Address, "Address", "Address")
    @Html.GroupItem(Model.Email, "Email", "Email")
    @Html.GroupItem(Model.Contact, "Contact", "Contact")
    @Html.GroupItem(Model.Phone, "Phone", "Phone")
    @Html.GroupItem(Model.Fax, "Fax", "Fax")
    @Html.GroupItem(Model.Cell, "Cell", "Cell")
    @Html.GroupItem(Model.BillTo, "BillTo", "Bill To")
    @Html.GroupItem(Model.BillingAddress, "BillingAddress", "Billing Address")
</fieldset>
