@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.AxleInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Axle Information</legend>
    @Html.GroupItem(Model.Description, "Description", "Description")
    @Html.GroupItem(Model.WeightPerAxle, "WeightPerAxle", "Weight Per Axle")
    @Html.GroupItem(Model.DescriptionSummary, "DescriptionSummary", "Description Summary")
    @Html.GroupItem(Model.AxleCount, "AxleCount", "Axle Count")
    @Html.GroupItem(Model.GroupCount, "GroupCount", "Group Count")
    @Html.GroupItem(Model.ApproxAxleLength, "ApproxAxleLength", "Approximate Axle Length (Total)")
    @Html.GroupItem(Model.AxleLength, "AxleLength", "Axle Length (axle spacing)")
    @Html.GroupItem(Model.MaxAxleWidth, "MaxAxleWidth", "Max Axle Width")
    @Html.GroupItem(Model.MaxAxleWeight, "MaxAxleWeight", "Max Axle Weight", true)
    @Html.GroupItem(Model.TotalAxleWeight, "TotalAxleWeight", "Total Axle Weight", true)
    @Html.GroupItem(Model.AxleGroupSummary, "AxleGroupSummary", "Axle Group Summary")
    @Html.GroupItem(Model.AxelsPerGroup, "AxelsPerGroup", "Axels Per Group")
    @Html.GroupItem(Model.AxleGroupTireType, "AxleGroupTireType", "Axle Group Tire Type")
    @Html.GroupItem(Model.AxleGroupWidth, "AxleGroupWidth", "Axle Group Width")
    @Html.GroupItem(Model.AxleOperatingWeights, "AxleOperatingWeights", "Axle Operating Weights")
    @Html.GroupItem(Model.AxleGroupWeight, "AxleGroupWeight", "Axle Group Weight")
    @Html.GroupItem(Model.AxleGroupMaxWidth, "AxleGroupMaxWidth", "Axle Group Max Width")
    @Html.GroupItem(Model.AxleGroupTotalWeight, "AxleGroupTotalWeight", "Axle Group Total Weight")
    @Html.GroupItem(Model.AxleGroupDistance, "AxleGroupDistance", "Axle Group Distance")
</fieldset>
