@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.MovementInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Movement Information</legend>
    <div class="form-group row">
        <label class="col-sm-2 control-label">Route Origin</label>
        <div class="col-sm-8 input-group">
            <input type="text" class="form-control" />
            <div class="input-group-btn">
                <button class="btn btn-default" type="button" data-toggle="modal" data-target="#locationModal"><span class="glyphicon glyphicon-map-marker"></span></button>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 control-label">Route Destination</label>
        <div class="col-sm-8 input-group">
            <input type="text" class="form-control" />
            <div class="input-group-btn">
                <button class="btn btn-default" type="button" data-toggle="modal" data-target="#locationModal"><span class="glyphicon glyphicon-map-marker"></span></button>
            </div>
        </div>
    </div>
</fieldset>
