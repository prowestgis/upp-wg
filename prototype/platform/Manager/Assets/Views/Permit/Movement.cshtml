@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.MovementInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Movement Information</legend>
    @Html.GroupItem(Model.StartDate, "StartDate", "Start Date")
    @Html.GroupItem(Model.EndDate, "EndDate", "End Date")
    @Html.GroupItem(Model.HaulingHours, "HaulingHours", "Hauling Hours")

    <div class="form-group row">
        <label class="col-sm-2 control-label">Route Origin</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" id="movementinfo-origin" name="movementinfoOrigin" class="form-control" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-toggle="modal" data-target="#startLocationModal"><span class="glyphicon glyphicon-map-marker"></span></button>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 control-label">Route Destination</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" id="movementinfo-destination" name="movementinfoDestination" class="form-control" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-toggle="modal" data-target="#endLocationModal"><span class="glyphicon glyphicon-map-marker"></span></button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 control-label">Proposed Route</label>
        <div class="col-sm-8">
            <div id="route-map"></div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 control-label">Permit Authorities</label>
        <div class="col-sm-8">
            <input type="text" id="permit-authorities" class="form-control" readonly/>
        </div>
    </div>

    @Html.GroupItem(Model.RouteDescription, "RouteDescription", "Route Description")
    @Html.GroupItem(Model.RouteCountyNumbers, "RouteCountyNumbers", "County Roads")
    @Html.GroupItem(Model.MileOfCountyRoad, "MileOfCountyRoad", "Miles on County Roads")
    @Html.GroupItem(Model.RouteLength, "RouteLength", "Total Route Length")

    @Html.GroupItem(Model.StateHighwayPermitNumber, "StateHighwayPermitNumber", "State Highway Permit Number")
    @Html.GroupItem(Model.StateHighwayPermitIssued, "StateHiughwayPermitIssued", "State Highway Permit Issued Date")
    @Html.GroupItem(Model.NeedPilotCar, "NeedPilotCar", "Need Pilot Car?")
    @Html.GroupItem(Model.DestinationWithinCityLimits, "DestinationWithinCityLimits", "Destination is within City Limits?")
    @Html.GroupItem(Model.DestinationWithinApplyingCounty, "DestinationWithinApplyingCounty", "Destination is within the applying County?")

</fieldset>
