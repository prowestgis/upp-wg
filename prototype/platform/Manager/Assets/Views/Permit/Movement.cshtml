@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.MovementInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Movement Information</legend>
    @Html.GroupItem(Model.StartDate, new GroupItemProperties("StartDate") { label = "Start Date", inputType = GroupItemProperties.InputType.DATE })
    @Html.GroupItem(Model.EndDate, new GroupItemProperties("EndDate") { label = "End Date", inputType = GroupItemProperties.InputType.DATE })
    @Html.GroupItem(Model.HaulingHours, new GroupItemProperties("HaulingHours") { label = "Hauling Hours" })

    <div class="form-group row">
        <label class="col-sm-2 control-label">Route Origin</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" id="movementinfo-origin" name="movementinfoOrigin" class="form-control" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-toggle="modal" data-target="#startLocationModal"><span class="glyphicon glyphicon-map-marker"></span></button>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 control-label">Route Destination</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" id="movementinfo-destination" name="movementinfoDestination" class="form-control" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="button" data-toggle="modal" data-target="#endLocationModal"><span class="glyphicon glyphicon-map-marker"></span></button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 control-label">Proposed Route</label>
        <div class="col-sm-8">
            <div id="route-map"></div>
        </div>
    </div>
    <div class="form-group row">
        <button id="recalc-route" type="button">Recalculate Route</button>
        <button id="toggle-barriers" type="button">Toggle Route Barriers</button>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 control-label">Permit Authorities</label>
        <div class="col-sm-8">
            <input type="text" id="permit-authorities" class="form-control" readonly/>
        </div>
    </div>

    @Html.GroupItem(Model.RouteDescription, new GroupItemProperties("RouteDescription") { label = "Route Description" })
    @Html.GroupItem(Model.RouteCountyNumbers, new GroupItemProperties("RouteCountyNumbers"){ label = "County Roads" })
    @Html.GroupItem(Model.MileOfCountyRoad, new GroupItemProperties("MileOfCountyRoad") { label = "Miles on County Roads", inputType = GroupItemProperties.InputType.NUMBER, range = new GroupItemProperties.Range() { min = 0, step = 0.1 }, suffix = GroupItemProperties.Suffixes.MILES })
    @Html.GroupItem(Model.RouteLength, new GroupItemProperties("RouteLength") { label = "Total Route Length", inputType = GroupItemProperties.InputType.NUMBER, range = new GroupItemProperties.Range() { min=0, step = 0.1 }, suffix = GroupItemProperties.Suffixes.MILES })

    @Html.GroupItem(Model.StateHighwayPermitNumber, new GroupItemProperties("StateHighwayPermitNumber") { label = "State Highway Permit Number" })
    @Html.GroupItem(Model.StateHighwayPermitIssued, new GroupItemProperties("StateHiughwayPermitIssued") { label = "State Highway Permit Issued Date", inputType= GroupItemProperties.InputType.DATE })
    @Html.GroupItem(Model.NeedPilotCar, new GroupItemProperties("NeedPilotCar") { label = "Need Pilot Car?", inputType = GroupItemProperties.InputType.CHECKBOX })
    @Html.GroupItem(Model.DestinationWithinCityLimits, new GroupItemProperties("DestinationWithinCityLimits") { label = "Destination is within City Limits?", readOnly = true, inputType = GroupItemProperties.InputType.CHECKBOX })
    @Html.GroupItem(Model.DestinationWithinApplyingCounty, new GroupItemProperties("DestinationWithinApplyingCounty") { label = "Destination is within the applying County?", readOnly = true, inputType = GroupItemProperties.InputType.CHECKBOX })

</fieldset>
