@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.VehicleInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Vehicle Information</legend>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-8">
            <select class="form-control" id="vehicle-selector">
                <option></option>
            </select>
        </div>
    </div>
    @Html.GroupItem(Model.Year, "Year", "Year")
    @Html.GroupItem(Model.Make, "Make", "Make")
    @Html.GroupItem(Model.Model, "Model", "Model")
    @Html.GroupItem(Model.Type, "Type", "Type")
    @Html.GroupItem(Model.License, "License", "License Number")
    @Html.GroupItem(Model.State, "State", "State")
    @Html.GroupItem(Model.SerialNumber, "SerialNumber", "Truck Serial Number")
    @Html.GroupItem(Model.USDOTNumber, "USDOTNumber", "USDOT Number")
    @Html.GroupItem(Model.EmptyWeight, "EmptyWeight", "Empty Weight")
    @Html.GroupItem(Model.RegisteredWeight, "RegisteredWeight", "Registered Weight")
</fieldset>
