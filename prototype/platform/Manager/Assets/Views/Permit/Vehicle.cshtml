@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.VehicleInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Vehicle Information</legend>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-8">
            <select class="form-control" id="vehicle-selector">
                <option></option>
            </select>
        </div>
    </div>
    @Html.GroupItem(Model.Year, "Year")
    @Html.GroupItem(Model.Make, "Make")
    @Html.GroupItem(Model.Model, "Model")
    @Html.GroupItem(Model.Type, "Type")
    @Html.GroupItem(Model.License, "License Number")
    @Html.GroupItem(Model.State, "State")
    @Html.GroupItem(Model.SerialNumber, "Truck Serial Number")
    @Html.GroupItem(Model.USDOTNumber, "USDOT Number")
    @Html.GroupItem(Model.EmptyWeight, "Empty Weight")
    @Html.GroupItem(Model.RegisteredWeight, "Registered Weight")
</fieldset>
