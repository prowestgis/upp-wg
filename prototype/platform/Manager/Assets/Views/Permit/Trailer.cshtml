@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.TrailerInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Trailer Information</legend>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-8">
            <select class="form-control" id="trailer-selector">
                <option></option>
            </select>
        </div>
    </div>
    @Html.GroupItem(Model.Description, "Description")
    @Html.GroupItem(Model.Make, "Make")
    @Html.GroupItem(Model.Model, "Model")
    @Html.GroupItem(Model.Type, "Trailer Type")
    @Html.GroupItem(Model.SerialNumber, "Serial Number")
    @Html.GroupItem(Model.LicenseNumber, "License Number")
    @Html.GroupItem(Model.State, "State")
    @Html.GroupItem(Model.EmptyWeight, "Empty Weight")
    @Html.GroupItem(Model.RegisteredWeight, "Registered Weight")
    @Html.GroupItem(Model.RegulationWeight, "Regulation Weight")
</fieldset>
