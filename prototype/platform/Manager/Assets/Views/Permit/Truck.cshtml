@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.PermitView.TruckInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Truck Information</legend>
    @Html.GroupItem(Model.GrossWeight, "GrossWeight", "Total Gross Weight")
    @Html.GroupItem(Model.EmptyWeight, "EmptyWeight", "Empty Weight")
    @Html.GroupItem(Model.RegisteredWeight, "RegisteredWeight", "Registered Weight")
    @Html.GroupItem(Model.RegulationWeight, "RegulationWeight", "Regulation Weight")
    @Html.GroupItem(Model.DimensionSummary, "DimensionSummary", "Dimension Summary", true)
    @Html.GroupItem(Model.DimensionDescription, "DimensionDescription", "Overall Dimension Description", true)
    @Html.GroupItem(Model.Height, "Height", "Height")
    @Html.GroupItem(Model.Width, "Width", "Width")
    @Html.GroupItem(Model.Length, "Length", "Length")
    @Html.GroupItem(Model.FrontOverhang, "FrontOverhang", "Front Overhang")
    @Html.GroupItem(Model.RearOverhang, "RearOverhang", "Rear Overhang")
    @Html.GroupItem(Model.LeftOverhang, "LeftOverhang", "Left Overhang")
    @Html.GroupItem(Model.RightOverhang, "RightOverhang", "Right Overhang")
    @Html.GroupItem(Model.Diagram, "Diagram", "Diagram", true)
</fieldset>
