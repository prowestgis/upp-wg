@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<UPP.Protocols.HaulerInfo>
@using Manager.Helpers
@{
    Layout = null;
}
<fieldset>
    <legend>Hauler Information</legend>
    @Html.GroupItem(Model.Name, new GroupItemProperties("Name") { label = "Name", readOnly = true })
    @Html.GroupItem(Model.Date, new GroupItemProperties("Date") { label = "Application Date", inputType = GroupItemProperties.InputType.DATE_TIME })
    @Html.GroupItem(Model.Email, new GroupItemProperties("Email") { label = "Email", readOnly = true, inputType = GroupItemProperties.InputType.EMAIL })
    @Html.GroupItem(Model.Phone, new GroupItemProperties("Phone") { label = "Phone", readOnly = true })
    @Html.GroupItem(Model.Fax, new GroupItemProperties("Fax") { label = "Fax" })
</fieldset>
