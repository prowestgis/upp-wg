@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Manager.Host.DashboardView>
@using Manager.Store
@using UPP.Security
@{
    Layout = null;
}
<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="/images/favicon.ico">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
        <meta name="viewport" content="width=device-width" />
        <title>UPP Prototype</title>

        <!-- Styling content -->
        <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />

        <!-- Animation library for notifications   -->
        <link href="css/bootstrap/animate.min.css" rel="stylesheet" />

        <!--  Light Bootstrap Table core CSS    -->
        <link href="css/bootstrap/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />

        <!--  CSS for Demo Purpose, don't include it in your project     -->
        <link href="css/app.css" rel="stylesheet" />

        <!--  Fonts and icons     -->
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link href='//fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
        <link href="css/bootstrap/pe-icon-7-stroke.css" rel="stylesheet" />
    </head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="blue">
            <div class="sidebar-wrapper">
                <div class="logo">
                    Dashboard
                </div>
                <ul class="nav">
                    <li class="active">
                        <a href="dashboard.html">
                            <i class="pe-7s-graph"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="permit.html">
                            <i class="pe-7s-car"></i>
                            <p>Permit</p>
                        </a>
                    </li>
                    <li>
                        <a href="notifications.html">
                            <i class="pe-7s-bell"></i>
                            <p>Notifications</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Dashboard</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-dashboard"></i>
                                    <p class="hidden-lg hidden-md">Dashboard</p>
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Login <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-header">Primary</li>
                                    @foreach (var login in Model.Logins)
                                    {
                                    <li><a href="@login.Url">@login.Name</a></li>
                                    }
                                    <li class="dropdown-header">Fake (testing)</li>
                                    <li><a href="/authentication/redirect/fakegoogle">Google</a></li>                                    
                                </ul>
                            </li>
                            @if (Model.User != null && Model.User.IsAuthenticated)
                            {
                            <li>
                                <a href="/authentication/logout">Log out</a>
                            </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- A card for user information -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">User information</h4>
                                    <p class="category">Security</p>
                                </div>
                                <div class="content">
                                    @if (Model.User != null)
                                    {
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>Issuer</td>
                                                <td>@Model.User.ExtendedClaims["iss"]</td>
                                            </tr>
                                            <tr>
                                                <td>Identity Provider</td>
                                                <td>@Model.User.ExtendedClaims["idp"]</td>
                                            </tr>
                                            <tr>
                                                <td>Name</td>
                                                <td>@Model.User.Name</td>
                                            </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td>@Model.User.Email</td>
                                            </tr>
                                            <tr>
                                                <td>Phone</td>
                                                <td>@Model.User.Phone</td>
                                            </tr>
                                            <tr>
                                                <td>UPP Token</td>
                                                <td>@Model.User.ExtendedClaims["upp"]</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    }
                                    else
                                    {
                                    <p>No user is currently logged in</p>
                                    }
                                </div>
                                <div class="footer">
                                    <hr />
                                    @if (Model.User != null)
                                    {
                                        <div class="stats" style="padding-left: 15px">
                                            <i class="fa fa-clock-o"></i> Token expires at @Model.User.UtcExpiration.ToLocalTime() local time
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">OAuth2 Login Providers</h4>
                                    <p class="category">Security</p>
                                </div>
                                <div class="content">
                                    <table class="table">
                                        <tbody>
                                            @foreach (var oauth in Model.Auths)
                                            {
                                                <tr>
                                                    <td>@oauth.Name</td>
                                                    <td>@oauth.DisplayName</td>
                                                    <td>@oauth.Key</td>
                                                    <td>@oauth.Scopes</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="footer">
                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Micro-service Providers</h4>
                                    <p class="category">Capabilities</p>
                                </div>
                                <div class="content">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>OAuth</th>
                                                <th></th>
                                                <th>Type</th>
                                                <th>Priority</th>
                                            </tr>
                                        </thead>
                                        <tbody id="microservice-table">
                                        </tbody>
                                    </table>
                                </div>
                                <div class="footer">
                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                                
            <footer class="footer">
                <div class="container-fluid">
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script>
                    </p>
                </div>
            </footer>
        </div>
    </div>
    <script src="js/jquery.3.2.1.min.js"></script>
    <script src="js/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript">
        // Fetch the current list of registered microservices
        var sdUrl = "@Model.ServiceDirectoryUrl";
        $.get(sdUrl + 'api/v1/hosts', function (services) {
            var table = $('#microservice-table');
            $.each(services, function (index, service) {
                var row = $(
                    '<tr>' +
                        '<td>' + service.displayName + '</td>' +
                        '<td>' + (service.oAuthId || "None") + '</td>' +
                        '<td>' + service.uri + '</td>' +
                        '<td>' + service.type + '</td>' +
                        '<td>' + service.priority + '</td>' +
                    '</tr>'
                );

                table.append(row);
            });
        });
    </script>
</body>
</html>